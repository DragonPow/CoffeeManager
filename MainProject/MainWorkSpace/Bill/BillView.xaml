<UserControl x:Class="MainProject.MainWorkSpace.Bill.BillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainProject.MainWorkSpace.Bill"
             mc:Ignorable="d" 
             d:DesignWidth="600">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Tên cửa hàng"
                   FontSize="50"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 30"/>
        <Border BorderBrush="Black" BorderThickness="2"
                Background="BurlyWood"
                Margin="30 10">
            <Grid Margin="20 10">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="Grid.Column" Value="1">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Thời gian"
                       Grid.Row="0" Grid.Column="0"/>
                <TextBlock Text="Bàn"
                       Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="Mã hóa đơn"
                       Grid.Row="0" Grid.Column="1"/>
                <TextBlock Text="Số điện thoại"
                       Grid.Row="1" Grid.Column="1"/>
                <TextBlock Text="Địa chỉ"
                       Grid.Row="2" Grid.ColumnSpan="2"/>
            </Grid>
        </Border>
        
        <ContentControl Content="This is table lines user control"
                        HorizontalAlignment="Center"
                        Margin="0 20"
                        FontSize="30"/>

        <TextBlock Text="Cảm ơn quý khách"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   Margin="0 10 0 0"/>
        <TextBlock Text="Chúc quý khách ngon miệng"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   Margin="0 0 0 20"/>
    </StackPanel>
</UserControl>
