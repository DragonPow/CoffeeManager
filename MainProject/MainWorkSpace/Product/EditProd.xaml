<UserControl x:Class="MainProject.MainWorkSpace.Product.EditProd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainProject.MainWorkSpace.Product"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:model="clr-namespace:MainProject.Model"
             xmlns:main="clr-namespace:MainProject.MainWorkSpace"
             xmlns:viewmodel="clr-namespace:MainProject.ViewModel"
             xmlns:rules="clr-namespace:MainProject.ValidationRules"
             mc:Ignorable="d"
             Tag="EditPro"
             d:DataContext="{d:DesignInstance Type=main:MainViewModel}"
             Height="650"
             Width="500">
    <DockPanel>
        <Grid DockPanel.Dock="Top"
              Background="{StaticResource MainColor}">
            <Border BorderBrush="Gray"
                    BorderThickness="1" />
            <TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Text="Chỉnh sửa sản phẩm"
                       FontSize="22"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            <Button Background="Transparent"
                    BorderBrush="Transparent"
                    Margin="10"
                    Command="{Binding Productviewmodel.ExitUpdateProduct_Command}"
                    HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="Close"
                                         Width="25"
                                         Height="25"
                                         Foreground="White"/>
            </Button>
        </Grid>
        <ScrollViewer DockPanel.Dock="Bottom"
                      Background="White"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Button Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Grid.Row="1"
                        Margin="0,40,0,20"
                        Width="200"
                        Height="160"
                        Padding="0"
                        Background="Transparent"
                        Command="{Binding Productviewmodel.AddUpdateImageProductCommand}">
                    <Grid Height="160" Width="200">
                        <Image Stretch="Fill"
                                   Source="{Binding Productviewmodel.Currentproduct.Image}" />
                    </Grid>
                </Button>
                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Tên sản phẩm"
                         FontSize="16"
                         Margin="70,5"
                         MaxWidth="500"
                         Validation.Error="Validation_Error">
                    <TextBox.Text>
                        <Binding Path="Productviewmodel.Currentproduct.Name"
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="PropertyChanged"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rules:NotNullableValidationRule ErrorMessage="Không được để trống hoặc để trắng"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Danh mục"
                          ItemsSource="{Binding ListType}"
                          SelectedItem="{Binding Productviewmodel.Currentproduct.TYPE_PRODUCT}"
                          DisplayMemberPath="Type"
                          FontSize="16"
                          MaxWidth="500"
                          Margin="70,5" />
                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Giá"
                         FontSize="16"
                         materialDesign:TextFieldAssist.SuffixText="đ"
                         MaxWidth="500"
                         Margin="70,5"
                         Validation.Error="Validation_Error">
                    <TextBox.Text>
                        <Binding Path="Productviewmodel.Currentproduct.Price"
                                 StringFormat="{}{0:N0}"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rules:CharacterValidationRule ValidCharacterSet="0123456789"
                                                               ErrorMessage="Chỉ được nhập số" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Mô tả"
                         Name="Description"
                         materialDesign:TextFieldAssist.SuffixText="{Binding ElementName=Description, Path=Text.Length, StringFormat='{}{0}/30'}"
                         TextWrapping="Wrap"
                         MaxWidth="500"
                         Margin="70,5"
                         Validation.Error="Validation_Error">
                    <TextBox.Text>
                        <Binding Path="Productviewmodel.Currentproduct.Decription"
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="PropertyChanged"
                                 NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rules:LengthRangeValidationRule Min="0"
                                                                 Max="30"
                                                                 ErrorMessage="Không được vượt quá số ký tự cho phép" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <Grid Margin="100,30"
                      MaxWidth="500">
                    <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            Grid.Column="1"
                            Height="50"
                            Command="{Binding Productviewmodel.UpdateProduct_Command}"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource MainColor}"
                            BorderBrush="#31CA62"
                            Foreground="White"
                            Content="Lưu"
                            FontSize="20">
                    </Button>

                </Grid>

            </StackPanel>




        </ScrollViewer>
    </DockPanel>
</UserControl>
